<SmxColor name="XUi_Common/styles.xml">

	<!-- Steel Blue color scheme for SMX UI modlet. -->


	<prepend xpath="/styles/global">
		<style_entry name="smxcolor_main_color" 					value="70,130,180"/>
		<style_entry name="smxcolor_secondary_color"				value="14,145,241" />

		<style_entry name="smxcolor_main_color_alpha"				value="70,130,180, 128" />
		<style_entry name="smxcolor_secondary_color_alpha"			value="14,145,241, 255" />
	</prepend>


	<!-- Tooltip border color -->
	<set xpath="/styles/global/style_entry[@name='smxcore_tooltip_border']/@value">[smxcolor_main_color]</set>

	<!-- Background color -->
	<set xpath="/styles/global/style_entry[@name='smxcore_element_header_background']/@value">[smxcolor_main_color]</set>
	<set xpath="/styles/global/style_entry[@name='smxcore_element_header_background_alt']/@value">[smxcolor_secondary_color]</set>

	<!-- Button Foreground -->
	<set xpath="/styles/global/style_entry[@name='smxcore_element_button_foreground']/@value">[smxcolor_main_color]</set>

	<!-- Accent Color -->
	<set xpath="/styles/global/style_entry[@name='smxcore_element_accentcolor_1']/@value">[smxcolor_main_color]</set>
	<set xpath="/styles/global/style_entry[@name='smxcore_element_accentcolor_2']/@value">[smxcolor_secondary_color]</set>


	<!-- Frames -->
	<set xpath="/styles/global/style_entry[@name='smxcore_slot_frame_locked']/@value">[smxcolor_main_color_alpha]</set>
	<set xpath="/styles/global/style_entry[@name='smxcore_slot_frame_search']/@value">[smxcolor_secondary_color_alpha]</set>

</SmxColor>